<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parcel_particulars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.InformSetActivity">
    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通知设置"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/cl_e3e3e3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>
    <RelativeLayout
        android:paddingLeft="@dimen/px_32"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100">
        <TextView
            android:text="是否接收快递通知"
            android:layout_centerVertical="true"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.me_jie.snailexpress_staff.custom.SwitchButton
            android:id="@+id/switch_button"
            android:layout_marginRight="@dimen/px_32"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_60"/>
    </RelativeLayout>
    <View
        android:background="@color/cl_e3e3e3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>
    <RelativeLayout
        android:paddingLeft="@dimen/px_32"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100">
        <TextView
            android:text="是否接收系统通知"
            android:layout_centerVertical="true"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.me_jie.snailexpress_staff.custom.SwitchButton
            android:layout_marginRight="@dimen/px_32"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_60"/>
    </RelativeLayout>
</LinearLayout>
