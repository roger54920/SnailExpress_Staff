<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_110"
    android:paddingLeft="@dimen/px_32"
    android:paddingRight="@dimen/px_32">

    <TextView
        android:id="@+id/ers_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_15"
        android:layout_toRightOf="@+id/ers_type"
        android:text="王XX"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/ers_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px_15"
        android:text="175252365254"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/ers_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_15"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_toRightOf="@+id/ers_type"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="北京市吸尘器股流动大街洗车是好友33号245"
        android:textColor="@color/cl_666666"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/ers_type"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_44"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_return_shape"
        android:gravity="center"
        android:text="寄件"
        android:textColor="@color/cl_6fd1c8"
        android:textSize="@dimen/px_26" />
</RelativeLayout>