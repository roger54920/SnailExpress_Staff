<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px_20"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_32"
    android:paddingRight="@dimen/px_32">

    <TextView
        android:id="@+id/carrier_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30"
        android:text="承运来源："
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/tracking_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:text="快递单号："
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:text="2016/12/18 11:00"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />
    <TextView
        android:layout_marginTop="@dimen/px_15"
        android:id="@+id/contact_information_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快递员正在派送中，联系电话13811111111"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <RelativeLayout
        android:layout_marginTop="@dimen/px_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_30" />
        <TextView
            android:layout_marginRight="@dimen/px_32"
            android:singleLine="true"
            android:id="@+id/sir_address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_toRightOf="@+id/sir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区望京花家北理1号楼3门806"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingBottom="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:singleLine="true"
            android:layout_marginTop="@dimen/px_15"
            android:layout_below="@+id/phone_number_tv"
            android:id="@+id/staff_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="已接收"
            android:textColor="@color/cl_6fd1c8"
            android:textSize="@dimen/px_28" />
        <TextView
            android:id="@+id/phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13900101234"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />
    </RelativeLayout>
</LinearLayout>