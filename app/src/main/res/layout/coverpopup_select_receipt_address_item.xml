<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/px_656"
        android:layout_height="@dimen/px_520"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg_shape">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/px_20"
                android:gravity="center"
                android:text="@string/select_address"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_30" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@+id/title"
            android:background="@color/cl_e3e3e3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_receipt_address_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:paddingBottom="@dimen/px_130" />

        <RelativeLayout
            android:layout_marginBottom="@dimen/px_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/px_220"
                android:layout_height="@dimen/px_80"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@drawable/button_return_shape"
                android:gravity="center"
                android:text="@string/go_back"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32" />

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="@dimen/px_220"
                android:layout_height="@dimen/px_80"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_affirm_shape"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/px_32" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>