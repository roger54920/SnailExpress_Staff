<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_32"
        android:layout_marginTop="@dimen/px_30"
        android:text="2016/01/02 18:00"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_32"
        android:layout_marginRight="@dimen/px_32"
        android:layout_marginTop="@dimen/px_25">

        <TextView
            android:id="@+id/sir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/sir_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_toRightOf="@+id/sir_name"
            android:text="北京市朝阳区望京花家北理1号楼3门806"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/evaluate_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_32"
        android:layout_marginRight="@dimen/px_32"
        android:layout_marginTop="@dimen/px_15">

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分：0星"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/service_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="打赏：0元"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginRight="@dimen/px_32"
        android:layout_marginTop="@dimen/px_15"
        android:text="服务费：0元"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_30"
        android:id="@+id/service_charge" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/cl_e3e3e3" />
</LinearLayout>