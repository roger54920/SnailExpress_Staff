<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_6fd1c8"
    android:fitsSystemWindows="true"
    tools:context=".ui.CollectingOverdueActivity">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:padding="@dimen/px_20"
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_12"
            android:src="@mipmap/left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="收件信息录入"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/px_96"
        android:layout_below="@id/one"
        android:background="@color/cl_f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"

        android:paddingLeft="@dimen/px_32"
        android:layout_marginTop="@dimen/px_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/px_30"
            android:text="用户授权代收货款时间：20170213 16:06"
            android:textSize="@dimen/px_30"
            android:textColor="@color/cl_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_60"
            android:text="用户账号余额：300元"
            android:textSize="@dimen/px_30"
            android:textColor="@color/cl_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginBottom="@dimen/px_80"
            android:layout_marginTop="@dimen/px_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/sf"
                android:text="代付金额"
                android:textSize="@dimen/px_30"
                android:textColor="@color/cl_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginRight="@dimen/px_32"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_toRightOf="@+id/sf"
                android:layout_alignParentRight="true"
                android:id="@+id/sr_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:background="@drawable/edit_shape"
                android:gravity="center_vertical"
                android:hint="请输入代用户向快递公司支付的金额"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:inputType="phone|number"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/px_28" />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/confirmation_collection_overdue_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cl_6fd1c8"
        android:gravity="center"
        android:text="确认代付金额"
        android:textColor="@color/white"
        android:textSize="@dimen/px_32" />
</RelativeLayout>
