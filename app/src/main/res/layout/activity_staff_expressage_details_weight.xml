<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_6fd1c8"
    android:fitsSystemWindows="true"
    tools:context=".ui.StaffExpressageDetailsWeightActivity">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_12"
            android:padding="@dimen/px_20"
            android:src="@mipmap/left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/delivery_details"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/one"
        android:background="@color/cl_f5f5f5">

        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:background="@color/white"
            android:paddingBottom="@dimen/px_40"
            android:paddingLeft="@dimen/px_32"
            android:paddingRight="@dimen/px_32">

            <TextView
                android:id="@+id/bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/import_package_weight"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32" />

            <EditText
                android:id="@+id/parcel_weighs_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_below="@+id/bh"
                android:layout_marginTop="20px"
                android:background="@drawable/edit_shape"
                android:gravity="center_vertical"
                android:hint="@string/import_package_weight"
                android:inputType="phone|number"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/px_30" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_below="@+id/two"
            android:layout_marginTop="@dimen/px_20"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_32"
            android:text="包裹金额：20元"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_32" />

        <Button
            android:id="@+id/rechargeable_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/cl_6fd1c8"
            android:gravity="center"
            android:text="@string/charge"
            android:textColor="@color/white"
            android:textSize="@dimen/px_32" />
    </RelativeLayout>
</RelativeLayout>
