<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parcel_particulars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f5f5f5"
    android:fitsSystemWindows="true"
    tools:context=".ui.StaffHandoverActivity">


    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="交接工作"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_110"
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/white"
        android:layout_below="@id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_600">
        <TextView
            android:layout_marginTop="@dimen/px_100"
            android:text="本站站长："
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_50"
            android:text="王XX  已于2017/02/20  19:30"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_15"
            android:text="将蜗牛站管理工作交给你，请确认"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/find_addressee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cl_6fd1c8"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/px_32" />
</RelativeLayout>
