<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_6fd1c8"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.UserScanQRCodeActivity">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:padding="@dimen/px_20"
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_12"
            android:src="@mipmap/left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="扫码"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="@dimen/px_435"
                android:layout_height="@dimen/px_435"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/px_80"
                android:layout_marginTop="@dimen/px_80"
                android:src="@mipmap/qr_code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:text="牛栏上而过啊头发这对父女空间上的开发商奋斗饿的风格"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/px_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_15"
                android:text="全葛第一个 分打开感觉是吧 神通中通邮政"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/px_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_15"
                android:text="承运来源：EMS"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/px_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_15"
                android:text="快递单号：11891495555203"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/px_28" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_below="@+id/sr_number"
                android:background="@color/cl_e3e3e3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_32"
                    android:text="李先生"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_toRightOf="@+id/name"
                    android:text="北京市朝阳区望京花家北理1号楼3门806"
                    android:textColor="@color/cl_666666"
                    android:textSize="@dimen/px_30" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
