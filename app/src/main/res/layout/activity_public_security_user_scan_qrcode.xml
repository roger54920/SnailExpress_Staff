<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/cl_f5f5f5"
    tools:context=".ui.PublicSecurityUserScanQRCodeActivity">
    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户扫码"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/px_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/qr_code"
            android:layout_marginTop="@dimen/px_80"
            android:layout_marginBottom="@dimen/px_80"
            android:layout_width="@dimen/px_435"
            android:layout_height="@dimen/px_435" />

        <View
            android:id="@+id/line"
            android:background="@color/cl_e3e3e3"
            android:layout_below="@+id/sr_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="@dimen/px_32"
                android:layout_centerVertical="true"
                android:text="李先生"
                android:textSize="@dimen/px_32"
                android:textColor="@color/cl_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/name"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_centerVertical="true"
                android:text="北京市朝阳区望京花家北理1号楼3门806"
                android:textSize="@dimen/px_30"
                android:textColor="@color/cl_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
