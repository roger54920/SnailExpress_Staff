<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parcel_particulars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_6fd1c8"
    android:fitsSystemWindows="true"
    tools:context=".ui.UserScanQRCodeAffirmActivity">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/cl_6fd1c8">

        <ImageView
            android:padding="@dimen/px_20"
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_12"
            android:src="@mipmap/left_icon" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户扫码"
            android:textColor="@color/white"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/one"
        android:layout_marginBottom="@dimen/px_96"
        android:background="@color/cl_f5f5f5">

        <LinearLayout
            android:id="@+id/three"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_32"
            android:paddingRight="@dimen/px_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="李先生：您的包裹已到达"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="牛栏上而过啊头发这对父女空间上的开发商奋斗饿的风格看睡觉了"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/px_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="欧俄力度IE如桃花饿的死刑复核"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/px_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="承运来源：EMS"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/px_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                android:layout_marginTop="@dimen/px_16"
                android:text="快递单号：11891495555203"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/px_26" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_marginTop="@dimen/px_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="请为蜗牛顾家打分"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_30" />

            <com.example.me_jie.snailexpress_staff.custom.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_30"
                app:starCount="5"
                app:starEmpty="@drawable/star_nor"
                app:starFill="@drawable/star_sel"
                app:starHalf="@drawable/star_nor"
                app:starImageSize="@dimen/px_44"
                app:starPadding="@dimen/px_40"
                app:starStep="0"
                app:stepSize="Half" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_60">

                <TextView
                    android:id="@+id/td"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="蜗牛小哥的服务态度："
                    android:textColor="@color/cl_999999"
                    android:textSize="@dimen/px_26" />

                <RadioGroup
                    android:id="@+id/service_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_toRightOf="@+id/td"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/service_stick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/stick_style" />

                    <RadioButton
                        android:id="@+id/service_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_100"
                        android:button="@drawable/bad_style" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_60">

                <TextView
                    android:id="@+id/sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="蜗牛小哥的送货速度："
                    android:textColor="@color/cl_999999"
                    android:textSize="@dimen/px_26" />

                <RadioGroup
                    android:id="@+id/delivery_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_60"
                    android:layout_toRightOf="@+id/sd"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/delivery_stick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/stick_style" />

                    <RadioButton
                        android:id="@+id/delivery_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_100"
                        android:button="@drawable/bad_style" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_80"
                android:layout_marginRight="@dimen/px_32"
                android:layout_marginTop="@dimen/px_60">

                <Button
                    android:id="@+id/one_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/play_frame"
                    android:gravity="center"
                    android:text="一元"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_30" />

                <Button
                    android:id="@+id/five_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/play_frame"
                    android:gravity="center"
                    android:text="五元"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_30" />

                <Button
                    android:id="@+id/ten_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/play_frame"
                    android:gravity="center"
                    android:text="十元"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_30" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
        <Button
            android:id="@+id/next_step_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/cl_6fd1c8"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/px_32" />

</RelativeLayout>
